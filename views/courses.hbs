   <div class="container mt-5">
          {{#if title}}
             <h1 class="text-center">  {{title }}</h1>
         {{/if }}
       {{#if message }}
             <p class="alert alert-danger">{{message}}</p>
        {{/if }}
       <div class="row">
        <div class="col-lg-4 p-3 text-bg-dark">
            <form action="">
                <label for="" class="form-label">Course Name</label>
                <input type="text" class="form-control" name="course_name" placeholder="Course Name">
                <label for="" class="form-label">Course Description</label>
                <textarea class="form-control" name="course_description" id="" cols="30" rows="10"></textarea>
                 <button class="btn btn-success mt-4">Save</button>
            </form>
        </div>
        <div class="col-lg-8 ">
             <table class="table table-dark px-3 pe-3">
            <thead>
                 <th>Course ID</th>
                <th>Course Name</th>
                <th>Description</th>
                <th>Action</th>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
                    <td>{{this.course_id}}</td>
                     <td>{{this.course_name}}</td>
                      <td>{{this.course_description}}</td>
                     
                      <td>
                        <a href="" class="btn btn-success">Edit</a>
                         <a href="" class="btn btn-warning">Delete</a>
                      </td>
                </tr>
                  {{/each}}
            </tbody>
        </table>
        </div>
       </div>
    </div>
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
